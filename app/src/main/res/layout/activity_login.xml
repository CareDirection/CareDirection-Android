<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin"
    android:background="@drawable/bg_research_gradient">

    <ImageView
        android:id="@+id/img_activity_login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="114dp"
        android:src="@drawable/logo"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_activity_login_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_activity_login_logo"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:background="@drawable/white_boder_square_32"
        android:layout_marginTop="90dp"
        >
    <EditText
        android:id="@+id/edt_activity_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_activity_login_id"
        android:layout_marginLeft="18dp"
        android:hint="아이디"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_activity_login_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_activity_login_id"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:background="@drawable/white_boder_square_32"
        android:layout_marginTop="14dp"
        >
        <EditText
            android:id="@+id/edt_activity_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_activity_login_pwd"
            android:layout_marginLeft="18dp"
            android:hint="비밀번호"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <Button
        android:id="@+id/btn_activity_login"
        android:layout_width="328dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_activity_login_pwd"
        android:layout_marginTop="51dp"
        android:background="@drawable/yellow_border_32"
        android:text="로그인"
        android:textAlignment="center"
        android:shadowColor="#29000000"
        android:shadowDy="1"
        android:shadowRadius="6"
        android:textSize="16sp"
        android:textColor="#2b2d2e"
        android:lineSpacingExtra="8sp"
        />
<TextView
    android:id="@+id/btn_activity_register"
    android:layout_width="328dp"
    android:layout_height="46dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_activity_login"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="#00ff0000"
    android:text="회원가입"
    android:textSize="14sp"
    android:textColor="#ebf0b0"
    android:lineSpacingExtra="6sp"
    android:layout_marginTop="7dp"
    android:gravity="center"
    />


    
</androidx.constraintlayout.widget.ConstraintLayout>