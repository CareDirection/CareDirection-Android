<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_research_gradient"
    tools:context=".login.ActivityLogin">

    <ImageView
        android:id="@+id/img_activity_login_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_activity_login_id"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/white_boder_square_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_activity_login_logo">

        <EditText
            android:id="@+id/edt_activity_login_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:fontFamily="@font/notosanskr_regular"
            android:hint="아이디"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_activity_login_id" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_activity_login_pwd"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/white_boder_square_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_activity_login_id">

        <EditText
            android:id="@+id/edt_activity_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:fontFamily="@font/notosanskr_regular"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_activity_login_pwd" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btn_activity_login"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/yellow_border_32"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="8sp"
        android:shadowColor="#29000000"
        android:shadowDy="1"
        android:shadowRadius="6"
        android:text="로그인"
        android:textAlignment="center"
        android:textColor="#2b2d2e"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_activity_login_pwd" />

    <TextView
        android:id="@+id/btn_activity_register"
        android:layout_width="328dp"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:background="#00ff0000"
        android:fontFamily="@font/notosanskr_regular"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="회원가입"
        android:textColor="#ebf0b0"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_login" />


</androidx.constraintlayout.widget.ConstraintLayout>