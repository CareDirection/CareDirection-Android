<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_tab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_dot_alcohol"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_progress_color" />

    <ImageView
        android:id="@+id/img_dot_vegetable"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/img_dot_alcohol"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_progress_color" />

    <ImageView
        android:id="@+id/img_dot_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/img_dot_vegetable"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_progress_color" />

    <ImageView
        android:id="@+id/img_dot_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/img_dot_activity"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_progress_color" />
</androidx.constraintlayout.widget.ConstraintLayout>