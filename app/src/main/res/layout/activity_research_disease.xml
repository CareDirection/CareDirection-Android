<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_research_gradient"
    tools:context=".research.researchDiseaseActivity">

    <TextView
        android:id="@+id/txt_disease_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:text="질병"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="18sp"
        android:lineSpacingExtra="9sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_disease_nametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="11sp"
        android:text="박진오님께서"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_disease_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="11sp"
        android:text="갖고계신"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/txt_disease_nametitle"
        app:layout_constraintTop_toBottomOf="@+id/txt_disease_nametitle" />

    <TextView
        android:id="@+id/txt_disease_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="11sp"
        android:text="질병"
        android:textColor="@color/colorYellow"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/txt_disease_subtitle1"
        app:layout_constraintTop_toTopOf="@+id/txt_disease_subtitle1" />

    <TextView
        android:id="@+id/txt_disease_subtitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="11sp"
        android:text="들을 선택해주세요."
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/txt_disease_subtitle2"
        app:layout_constraintTop_toTopOf="@+id/txt_disease_subtitle2" />


    <Button
        android:id="@+id/btn_disease_next"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/white_border"
        android:fontFamily="@font/notosanskr_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="다음"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>