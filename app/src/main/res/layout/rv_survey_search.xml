<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="125dp">

    <ImageView
        android:id="@+id/img_rv_item_care_search"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_rv_item_care_register_company"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorYellow" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_product_name"
        android:layout_width="194dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="뉴트리디데이 프리미엄 오메가 3골드 1100"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/img_rv_item_care_search"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_care_search_company" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="10sp"
        android:text="Vita Naturals Inc"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_rv_item_care_search"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_where_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="10sp"
        android:text="해외직구"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_rv_item_care_search_company"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_item_care_search_company"
        app:layout_constraintTop_toTopOf="@+id/txt_rv_item_care_search_company" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="36,800 원"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_rv_item_care_search"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_care_search_product_name" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_price_a_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="(1일 750원)"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_item_care_search_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_care_search_product_name" />

    <TextView
        android:id="@+id/txt_rv_item_care_search_amount_standard_pills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6sp"
        android:text="30정 기준"
        android:textColor="@color/colorDarkGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_item_care_search_price_a_day"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_care_search_product_name" />

</androidx.constraintlayout.widget.ConstraintLayout>