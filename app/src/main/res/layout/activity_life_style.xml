<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_life"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_research_gradient"
    tools:context=".research.lifestyle.LifeStyleActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_life_style"
        android:layout_width="112dp"
        android:layout_height="10dp"
        android:layout_marginTop="97dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@drawable/selector_dot_indicator"
        app:tabIndicatorHeight="0dp">

    </com.google.android.material.tabs.TabLayout>


    <com.example.caredirection.research.lifestyle.SwipeDisabledViewPager

        android:id="@+id/vp_life_style"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        app:layout_constraintTop_toBottomOf="@id/tl_life_style"
        tools:layout_editor_absoluteX="49dp" />

    <Button
        android:id="@+id/btn_life_next"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="122dp"
        android:background="@drawable/selector_btn_next"
        android:enabled="false"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="9sp"
        android:text="다음"
        android:textColor="@color/colorTranslucenceLight"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_life_style">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>