<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBlack">
    <TextView
        android:id="@+id/txt_research_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="11sp"
        android:text="반가워요,\n고객님의 이름을 정해주시겠어요?"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edt_research_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:ems="10"
        android:fontFamily="@font/notosanskr_regular"
        android:hint="선호하는 애칭이나 별명을 적어주세요."
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_research_name" />
    <TextView
        android:id="@+id/btn_name_next"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/white_border"
        android:fontFamily="@font/notosanskr_medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="다음"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_research_name" />
</androidx.constraintlayout.widget.ConstraintLayout>